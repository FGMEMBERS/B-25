<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList include="b25-base.xml">

  <sim>

    <description>B-25 Mitchell (YASim)</description>
    <startup>
      <splash-texture>Aircraft/B-25/Splashs/b25-splash.png</splash-texture>
    </startup>

    <model>
      <variant type="int">0</variant>
    </model>

    <menubar include="Dialogs/b25-menu.xml"/>

    <view n="104">
      <name>Navigator's Compartment</name>
      <type>lookfrom</type>
      <internal archive="y">true</internal>
      <config>
	<from-model type="bool">true</from-model>
	<from-model-idx type="int">0</from-model-idx>
	<ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
	<x-offset-m type="double" archive="y">0.000</x-offset-m>	<!-- Right -->
	<y-offset-m type="double" archive="y">0.762</y-offset-m>	<!-- Up    -->
	<z-offset-m type="double" archive="y">-2.400</z-offset-m>	<!-- Back  -->
	<pitch-offset-deg type="double">-15</pitch-offset-deg>
	<heading-offset-deg type="double">-35</heading-offset-deg>
	<default-field-of-view-deg type="double">65</default-field-of-view-deg>
      </config>
    </view>

  </sim>

</PropertyList>

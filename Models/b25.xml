<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <nasal>
    <load><![CDATA[
    var r = cmdarg();
    print ("B-25 loading for remote pilot " ~ r.getNode ("sim/multiplay/callsign").getValue ());
    var livery_update = aircraft.livery_update.new("Aircraft/B-25/Models/Liveries", 10);
    if (r.getNode ("sim/model/variant").getValue () == 1) {
      r.getNode ("sim/model/turret[0]/heading", 1).alias (r.getNode ("sim/multiplay/generic/float[14]"));
      r.getNode ("sim/model/turret[0]/pitch"  , 1).alias (r.getNode ("sim/multiplay/generic/float[15]"));
      print ("B-25J loaded for remote pilot " ~ r.getNode ("sim/multiplay/callsign").getValue ());
    }
    ]]></load>
    <unload><![CDATA[
    print ("B-25 unloading for remote pilot " ~ r.getNode ("sim/multiplay/callsign").getValue ());
    livery_update.stop();
    ]]></unload>
  </nasal>

  <model>
    <path>Aircraft/B-25/Models/main_Default.xml</path>
    <condition>
      <not-equals>
        <property>sim/model/livery/name</property>
        <value>Super Rabbit Chrome</value>
      </not-equals>
    </condition>
  </model>

  <model>
    <path>Aircraft/B-25/Models/main_Chrome.xml</path>
    <condition>
      <equals>
        <property>sim/model/livery/name</property>
        <value>Super Rabbit Chrome</value>
      </equals>
    </condition>
  </model>

  <!-- b25 addons -->
  <model>
    <path>Aircraft/B-25/Models/b25j_ExtraModels/b25j_Addons_SuperRabbit.xml</path>
    <condition>
      <equals>
        <property>sim/model/livery/name</property>
        <value>Super Rabbit Chrome</value>
      </equals>
    </condition>
  </model>
  
  <!-- Side Guns for this model -->
  <model>
    <path>Aircraft/B-25/Models/Interior/Guns/SideGuns.xml</path>
    <condition>
      <equals>
        <property>sim/model/variant</property>
        <value>1</value>
      </equals>
    </condition>
  </model>

  <model>
    <name>Dorsal_Turret_Gun_Right</name>
    <path>Aircraft/B-25/Models/Interior/Guns/M2_Browning.xml</path>
    <condition>
      <equals>
        <property>sim/model/variant</property>
        <value>1</value>
      </equals>
    </condition>
    <offsets>
      <x-m> -3.000 </x-m>
      <y-m>  0.240 </y-m>
      <z-m>  1.200 </z-m>
      <pitch-deg>0</pitch-deg>
    </offsets>
  </model>
  <model>
    <name>Dorsal_Turret_Gun_Left</name>
    <path>Aircraft/B-25/Models/Interior/Guns/M2_Browning.xml</path>
    <condition>
      <equals>
        <property>sim/model/variant</property>
        <value>1</value>
      </equals>
    </condition>
    <offsets>
      <x-m> -3.000 </x-m>
      <y-m> -0.240 </y-m>
      <z-m>  1.200 </z-m>
      <pitch-deg>0</pitch-deg>
    </offsets>
  </model>

  <animation>
    <type>select</type>
    <object-name>Dorsal_Turret</object-name>
    <condition>
      <equals>
	<property>sim/model/variant</property>
	<value>1</value>
      </equals>
    </condition>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>Dorsal_Turret</object-name>
    <property>sim/model/turret[0]/heading</property>
    <center>
      <x-m> -2.470 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  1.350 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z> -1 </z>
    </axis>
  </animation>
 
  <animation>
    <type>rotate</type>
    <object-name>Dorsal_Turret_Gun_Right</object-name>
    <object-name>Dorsal_Turret_Gun_Left</object-name>
    <property>sim/model/turret[0]/heading</property>
    <center>
      <x-m> -2.470 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  1.350 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z> -1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Dorsal_Turret_Gun_Right</object-name>
    <object-name>Dorsal_Turret_Gun_Left</object-name>
    <property>sim/model/turret[0]/pitch</property>
    <center>
      <x-m> -2.470 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  1.150 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

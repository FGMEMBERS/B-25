<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>FuelGaugeRear.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>ptrL</object-name>   
    <object-name>ptrR</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>ptrL</object-name>   
    <object-name>ptrR</object-name>
    <emission>
      <red>   0.9 </red>
      <green> 0.5 </green>
      <blue>  0.2 </blue>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>ptrL</object-name>
    <property>consumables/fuel/tank[2]/level-gal_us</property>
    <interpolation>
     <entry><ind>   0.00 </ind><dep>  0.0 </dep></entry>
     <entry><ind>  40.00 </ind><dep> 24.2 </dep></entry>
     <entry><ind>  80.00 </ind><dep> 42.6 </dep></entry>
     <entry><ind> 120.00 </ind><dep> 60.7 </dep></entry>
     <entry><ind> 150.00 </ind><dep> 82.1 </dep></entry>
    </interpolation>
    <axis> 
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
    <center>
      <x-m>  0.005894 </x-m>
      <y-m> -0.02495 </y-m>
      <z-m>  0.003137 </z-m>  
    </center>
  </animation>         
 
  <animation> 
    <type>rotate</type>
    <object-name>ptrR</object-name>
    <property>consumables/fuel/tank[3]/level-gal_us</property>
    <interpolation>
     <entry><ind>   0.00 </ind><dep>  0.0 </dep></entry>
     <entry><ind>  40.00 </ind><dep> 24.2 </dep></entry>
     <entry><ind>  80.00 </ind><dep> 42.6 </dep></entry>
     <entry><ind> 120.00 </ind><dep> 60.7 </dep></entry>
     <entry><ind> 150.00 </ind><dep> 82.1 </dep></entry>
    </interpolation>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
    <center>
      <x-m> 0.005894 </x-m>
      <y-m> 0.02495 </y-m>
      <z-m> 0.003137 </z-m>  
    </center>
  </animation>         
 
</PropertyList>

<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>FuelGaugeAux.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>ptrL</object-name>   
    <object-name>ptrR</object-name>

    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/B-25/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>ptrL</object-name>   
    <object-name>ptrR</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>ptrL</object-name>
    <property>consumables/fuel/tank[4]/level-gal_us</property>
    <interpolation>
     <entry><ind>   0.00 </ind><dep>  0.0 </dep></entry>
     <entry><ind>  40.00 </ind><dep> 24.2 </dep></entry>
     <entry><ind>  80.00 </ind><dep> 42.6 </dep></entry>
     <entry><ind> 120.00 </ind><dep> 60.7 </dep></entry>
     <entry><ind> 150.00 </ind><dep> 82.1 </dep></entry>
    </interpolation>
    <axis> 
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
    <center>
      <x-m>  0.005894 </x-m>
      <y-m> -0.024950 </y-m>
      <z-m>  0.003137 </z-m>  
    </center>
  </animation>         
 
  <animation> 
    <type>rotate</type>
    <object-name>ptrR</object-name>
    <property>consumables/fuel/tank[5]/level-gal_us</property>
    <interpolation>
     <entry><ind>   0.00 </ind><dep>  0.0 </dep></entry>
     <entry><ind>  40.00 </ind><dep> 24.2 </dep></entry>
     <entry><ind>  80.00 </ind><dep> 42.6 </dep></entry>
     <entry><ind> 120.00 </ind><dep> 60.7 </dep></entry>
     <entry><ind> 150.00 </ind><dep> 82.1 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.005894 </x-m>
      <y-m> 0.024950 </y-m>
      <z-m> 0.003137 </z-m>  
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>         
 
</PropertyList>

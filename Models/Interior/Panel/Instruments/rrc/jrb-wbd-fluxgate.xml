<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>rrc.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <object-name>bug</object-name>
    <object-name>knob</object-name>
	
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <object-name>bug</object-name>
    <emission>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>orientation/heading-magnetic-deg</property>
    <center>
      <x-m> -0.03 </x-m>
      <y-m>  0.00 </y-m>
      <z-m>  0.00 </z-m>
    </center>
    <axis>
     <x> -1 </x>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>bug</object-name>
    <property>instrumentation/magnetic-compass/bug-heading-deg</property>
    <center>
      <x-m> -0.03 </x-m>
      <y-m>  0.00 </y-m>
      <z-m>  0.00 </z-m>
    </center>
    <axis>
     <x> -1 </x>
    </axis>
  </animation>

</PropertyList>



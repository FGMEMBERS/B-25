<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>airtemp.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>fond2</object-name>
    <object-name>visses</object-name>
    <object-name>Airtemp.Faceback</object-name>
    <object-name>Airtemp.Needle</object-name>
   	
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/B-25/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>Airtemp.FaceBack</object-name>
    <object-name>Airtemp.Needle</object-name>
     <emission>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
     </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Airtemp.Needle</object-name>
    <property>/environment/temperature-degc</property>
    <interpolation>
      <entry><ind> -60 </ind><dep> -60 </dep></entry>
      <entry><ind>   0 </ind><dep>   0 </dep></entry>
      <entry><ind>  60 </ind><dep>  60 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.016 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

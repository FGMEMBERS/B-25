<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>NoseWheel_indicator_orange.ac</path>
  
  <animation>
    <object-name>indicator</object-name>
    <object-name>indicatorLightON</object-name>
    <object-name>indicatorLightOFF</object-name>
  </animation>
  
  <animation>
    <object-name>indicatorLightON</object-name>
    <type>select</type>
    <condition>
      <and>
        <equals>
          <property>controls/gear/gear-down</property>
          <value>true</value>
        </equals>
        <greater-than>
          <property>controls/flight/rudder</property>
          <value>0.15</value>
        </greater-than>
      </and>
    </condition>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>indicatorLightON</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   2 </red>
      <green> 2 </green>
      <blue>  2 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>indicator</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.005 </red>
      <green> 0.005 </green>
      <blue>  0.005 </blue>
    </emission>
  </animation>
  
</PropertyList>

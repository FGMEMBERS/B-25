<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>BombardierPanel.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>BombardierInstBox</object-name>

    <!-- Objets transparents -->
  </animation>

  <animation>
   <type>material</type>
    <object-name>BombardierInstBox</object-name>
    <emission>
      <red>   0.005 </red>
      <green> 0.005 </green>
      <blue>  0.005 </blue>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <model>
    <path>Aircraft/B-25/Models/Interior/Panel/Instruments/asi/asi.xml</path>
    <offsets>
      <x-m> 0.032 </x-m>
      <y-m> 0.100 </y-m>
      <z-m> 0.000 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/B-25/Models/Interior/Panel/Instruments/alt/alt.xml</path>
    <offsets>
      <x-m> 0.032 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.000 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/B-25/Models/Interior/Panel/Instruments/rrc/rcc.xml</path>
    <offsets>
      <x-m>  0.032 </x-m>
      <y-m> -0.100 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </model>

</PropertyList>


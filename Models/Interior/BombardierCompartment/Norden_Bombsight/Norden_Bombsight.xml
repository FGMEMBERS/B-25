<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>Norden_Bombsight.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>Norden</object-name>
    <object-name>CoarseNorden</object-name>
    <object-name>NordenMount</object-name>
    <object-name>Norden_Knobs_1</object-name>
    
    <!-- Objets transparents -->
    <object-name>Norden_Knobs_0</object-name>
    <object-name>NordenLens</object-name>
  </animation>

  <animation>
   <type>material</type>
   <object-name>Norden</object-name>
   <object-name>CoarseNorden</object-name>
   <object-name>NordenMount</object-name>
   <object-name>Norden_Knobs_1</object-name>
   <emission>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.005 </red>
      <green> 0.005 </green>
      <blue>  0.005 </blue>
    </emission>
  </animation>

  <animation>
   <type>material</type>
   <object-name>Norden_Knobs_0</object-name>
   <object-name>NordenLens</object-name>
   <emission>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.002 </red>
      <green> 0.002 </green>
      <blue>  0.002 </blue>
    </emission>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/B-25/Models/Effects/Glass/glass</inherits-from>
    <object-name>Norden_Knobs_0</object-name>
    <object-name>NordenLens</object-name>
  </effect>
  
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>Norden_Knobs_0</object-name>
    <object-name>NordenLens</object-name>
  </effect>
  
</PropertyList>

<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <keyboard>
    
    <key n="100">
      <name>d</name>
      <desc>Toggle bomb bay doors</desc>
      <binding>
        <command>nasal</command>
        <script>doors.bombs.toggle();</script>
      </binding>
    </key>
    
    <key n="115">
      <name>s</name>
      <mod-alt>
        <desc>Toggle superchargers</desc>
        <binding>
          <command>property-cycle</command>
          <property>controls/engines/engine[0]/boost</property>
          <value>0.7</value>
          <value>1.0</value>
        </binding>
        <binding>
          <command>property-cycle</command>
          <property>controls/engines/engine[1]/boost</property>
          <value>0.7</value>
          <value>1.0</value>
        </binding>
      </mod-alt>
    </key>

    <key n="68">
      <name>D</name>
      <desc>Toggle crew door</desc>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </key>
  </keyboard>
  
</PropertyList>
